<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= yield(:title) %> â€“ Tracklog</title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <link href="/assets/favicon.ico" rel="shortcut icon" />
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="header">
      <div class="site">
        <p class="info">
          Logged in as <strong><%= current_user.display_name %></strong>
          (<%= link_to "Log Out", logout_path, :method => :put %>)
        </p>
        <ul>
          <li><%= link_to "Dashboard", dashboard_path %>
          <li><%= link_to "My Profile", profile_path(:user_id => current_user) %>
          <%- if current_user.is_admin? -%>
            <li><%= link_to 'Vehicles', vehicles_path %></li>
            <li><%= link_to "Admin", admin_path %>
          <%- end -%>
        </ul>
      </div>
    </div>

    <div class="site">
      <%- if flash[:notice] -%>
        <div id="flash-notice">
          <%= flash[:notice] %>
        </div>
      <%- end -%>

      <%- if flash[:error] -%>
        <div id="flash-error">
          <%= flash[:error] %>
        </div>
      <%- end -%>

      <%= yield %>
      <%= yield :scripts %>
    </div>
  </body>
</html>
