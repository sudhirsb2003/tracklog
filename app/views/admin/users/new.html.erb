<%- title "Add User" -%>
<h1>Add User</h1>

<%= form_for [:admin, @user] do |f| %>
  <div class="form">
    <div class="row">
      <div class="label">
        <label for="user_username">Username</label>
      </div>
      <div class="field">
        <%= f.text_field :username %>
        <%- @user.errors[:username].each do |message| -%>
          <p class="error">Username <%= message %></p>
        <%- end -%>
      </div>
    </div>

    <div class="row">
      <div class="label">
        <label for="user_password">Password</label>
      </div>
      <div class="field">
        <%= f.password_field :password %>
        <%- @user.errors[:password].each do |message| -%>
          <p class="error">Password <%= message %></p>
        <%- end -%>
      </div>
    </div>
    <div class="row">
      <div class="label">
        <label for="user_name">Full Name</label>
      </div>
      <div class="field">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="row">
      <div class="label">
        <label for="user_name">Upload Photo</label>
      </div>
      <div class="field">
        <%= f.file_field :photo %>
      </div>
    </div>
    <div class="row">
      <div class="label">
        <label for="user_name">address</label>
      </div>
      <div class="field">
        <%= f.text_area :address %>
      </div>
    </div>
    <div class="row">
      <div class="label">
        <label for="blood_group">Blood group</label>
      </div>
      <div class="field">
        <%= f.text_field :blood_group %>
      </div>
    </div>
    <div class="row">
      <div class="label">
        <label for="contact_no">Contact Number</label>
      </div>
      <div class="field">
        <%= f.text_field :contact_no %>
      </div>
    </div>
    <div class="row">
      <div class="label">
        <label for="emergency_contact_no">Emergency contact number</label>
      </div>
      <div class="field">
        <%= f.text_field :emergency_contact_no %>
      </div>
    </div>
    <div class="row">
      <div class="label">
        <label for="family_doctor_name">Family doctor name</label>
      </div>
      <div class="field">
        <%= f.text_field :family_doctor_name %>
      </div>
    </div>
    <div class="row">
      <div class="label">
        <label for="blood_group">Reference Number 1</label>
      </div>
      <div class="field">
        <%= f.text_field :ref_number_1 %>
      </div>
    </div>
    <div class="row">
      <div class="label">
        <label for="blood_group">Reference number 2</label>
      </div>
      <div class="field">
        <%= f.text_field :ref_number_2 %>
      </div>
    </div>

    <div class="row">
      <div class="label">
        Profile Title
      </div>
      <div class="field controls">
        <label>
          <%= f.radio_button :profile_title, "driver" %>
          Driver
        </label>
        <label>
          <%= f.radio_button :profile_title, "employee" %>
          Employee
        </label>
      </div>
    </div>
    <div class="row">
      <div class="label">
        Admin
      </div>
      <div class="field controls">
        <label><%= f.check_box :is_admin %></label>
      </div>
    </div>
    <div class="row submit">
      <%= submit_tag "Create User" %>
    </div>
  </div>
<% end %>
